    </LinearLayout>

    <TextView android:id="@+id/widget_empty_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/widget_no_todos" android:textSize="11sp" android:textColor="#9EA1B1" android:gravity="center" android:paddingTop="8dp" android:visibility="gone" />
</LinearLayout>
