        <TextView android:id="@+id/widget_todo_title_1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="4dp" android:textSize="11sp" android:textColor="#2D3250" android:maxLines="1" android:ellipsize="end" />
