    <LinearLayout android:id="@+id/widget_todo_item_3" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="4dp" android:gravity="center_vertical">
        <ImageButton android:id="@+id/widget_todo_check_button_3" android:layout_width="24dp" android:layout_height="24dp" android:background="?android:attr/selectableItemBackgroundBorderless" android:src="@android:drawable/checkbox_off_background" android:contentDescription="@string/widget_check_todo" />
