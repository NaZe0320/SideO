<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="12dp">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingBottom="8dp" />

    <!-- Todo Item 0 -->
    <LinearLayout
        android:id="@+id/widget_todo_item_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/widget_todo_check_button_0"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/checkbox_off_background"
            android:contentDescription="@string/widget_check_todo" />

        <TextView
            android:id="@+id/widget_todo_title_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Todo Item 1 -->
    <LinearLayout
        android:id="@+id/widget_todo_item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/widget_todo_check_button_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/checkbox_off_background"
            android:contentDescription="@string/widget_check_todo" />

        <TextView
            android:id="@+id/widget_todo_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Todo Item 2 -->
    <LinearLayout
        android:id="@+id/widget_todo_item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/widget_todo_check_button_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/checkbox_off_background"
            android:contentDescription="@string/widget_check_todo" />

        <TextView
            android:id="@+id/widget_todo_title_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Todo Item 3 -->
    <LinearLayout
        android:id="@+id/widget_todo_item_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/widget_todo_check_button_3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/checkbox_off_background"
            android:contentDescription="@string/widget_check_todo" />

        <TextView
            android:id="@+id/widget_todo_title_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Todo Item 4 -->
    <LinearLayout
        android:id="@+id/widget_todo_item_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/widget_todo_check_button_4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/checkbox_off_background"
            android:contentDescription="@string/widget_check_todo" />

        <TextView
            android:id="@+id/widget_todo_title_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_empty_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_no_todos"
        android:textSize="14sp"
        android:textColor="#888888"
        android:gravity="center"
        android:paddingTop="16dp"
        android:visibility="gone" />

</LinearLayout>
